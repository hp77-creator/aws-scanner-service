# AWS Scanner Service - Environment Variables Example
# Copy this file to .env and update values as needed

# ===================================
# Database Configuration
# ===================================
POSTGRES_DB=scanner_db
POSTGRES_USER=scanner
POSTGRES_PASSWORD=scanner123

SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/scanner_db
SPRING_DATASOURCE_USERNAME=scanner
SPRING_DATASOURCE_PASSWORD=scanner123

# ===================================
# AWS Configuration (LocalStack)
# ===================================
AWS_REGION=us-east-1
AWS_ENDPOINT=http://localstack:4566
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_SQS_QUEUE_URL=http://localstack:4566/000000000000/scanner-queue

# ===================================
# Spring Boot Configuration
# ===================================
SPRING_PROFILES_ACTIVE=local

# Logging Levels
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_IO_HP77CREATOR=DEBUG

# Flyway (disable for worker)
SPRING_FLYWAY_ENABLED=true

# ===================================
# LocalStack Configuration
# ===================================
SERVICES=s3,sqs
DEBUG=1
DATA_DIR=/tmp/localstack/data

# ===================================
# Application Ports
# ===================================
API_PORT=8080
POSTGRES_PORT=5432
LOCALSTACK_PORT=4566

# ===================================
# Notes
# ===================================
# - For production, use real AWS credentials and endpoints
# - Update SPRING_FLYWAY_ENABLED=false for worker service
# - Use AWS Secrets Manager for sensitive data in production
# - Set LOGGING_LEVEL_ROOT=WARN for production
